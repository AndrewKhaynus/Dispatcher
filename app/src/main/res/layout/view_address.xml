<?xml version="1.0" encoding="utf-8"?>
<nyc.friendlyrobot.dispatcher.ui.checkout.CheckoutAddressView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toBottomOf="@+id/searchView"
    android:visibility="gone"
    android:id="@+id/checkoutAddressView"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameDisplay"
        android:textSize="40dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_addy_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameDisplay">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="60dp"
        android:layout_marginTop="20dp"
        android:id="@+id/firstAddressView"
        android:hint="first Address"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_addy_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_addy_first">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="60dp"
            android:layout_marginTop="20dp"
            android:id="@+id/lastAddressView"
            android:hint="second Address"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_addy_last"
        android:id="@+id/submitAddress"
        android:text="Submit Address"
        />

</nyc.friendlyrobot.dispatcher.ui.checkout.CheckoutAddressView>