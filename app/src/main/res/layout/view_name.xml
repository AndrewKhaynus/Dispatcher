<nyc.friendlyrobot.dispatcher.ui.checkout.CheckoutNameView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="@+id/searchView"
    android:visibility="gone"
    tools:visibility="visible"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/checkoutNameView"
    android:background="@color/colorWhite">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_first"
        android:layout_marginTop="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            style="@style/Input"
            tools:text="Lorem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameView"
            android:hint="First Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_last"
        android:layout_marginTop="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/input_first">

        <EditText
            style="@style/Input"
            tools:text="Lorem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastNameView"
            android:hint="Last Name" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submitName"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/input_last"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

</nyc.friendlyrobot.dispatcher.ui.checkout.CheckoutNameView>
